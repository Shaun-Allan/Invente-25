{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Festival Events"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "department": {
      "type": "enumeration",
      "enum": ["CSE", "SNU_CSE", "IT", "ECE", "EEE", "BME", "CHEM", "CIVIL", "MECH", "COM"],
      "required": true,
      "description": "Select the department responsible for the event"
    },
    "class": {
      "type": "enumeration",
      "enum": ["technical", "non-technical"],
      "required": true,
      "description": "Must be technical or non-technical"
    },
    "catchphrase": {
      "type": "string"
    },
    "domain": {
      "type": "string",
      "required": true
    },
    "teamSize": {
      "type": "string",
      "required": true
    },
    "day": {
      "type": "enumeration",
      "enum": [
        "Day 1",
        "Day 2"
      ],
      "required": true
    },
    "time": {
      "type": "string",
      "required": true
    },
    "venue": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "prizes": {
      "type": "component",
      "repeatable": true,
      "component": "event.prize-detail"
    },
    "heads": {
      "type": "component",
      "repeatable": true,
      "component": "event.coordinator"
    },
    "rounds": {
      "type": "component",
      "repeatable": true,
      "component": "event.round"
    }
  }
}